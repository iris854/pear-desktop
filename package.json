    "dev:debug": "pnpm cross-env ELECTRON_ENABLE_LOGGING=1 pnpm dev",
    "clean": "pnpm del-cli dist && pnpm del-cli pack && pnpm del-cli .vite-inspect",
    "lint": "pnpm eslint ./src",
    "typecheck": "pnpm tsc -p tsconfig.json --noEmit"
  },
