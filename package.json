    "start": "pnpm electron-vite preview",
    "start:debug": "pnpm cross-env ELECTRON_ENABLE_LOGGING=1 pnpm start",
    "dev": "pnpm cross-env NODE_ENV=development NODE_OPTIONS=--enable-source-maps electron-vite dev --watch",
